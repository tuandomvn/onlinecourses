@page
@using Microsoft.Extensions.Localization
@using Acme.OnlineCourses.Localization
@using Acme.OnlineCourses.Agencies
@using Acme.OnlineCourses.Pages.Agencies
@model IndexModel
@inject IStringLocalizer<OnlineCoursesResource> L
@inject IAgencyAppService AgencyAppService
@{
    ViewData["Title"] = L["Agencies"];
}

@section scripts {
    <abp-script src="/Pages/Agencies/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Agencies"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewAgencyButton"
                           text="@L["NewAgency"].Value"
                           icon="plus"
                           button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="AgenciesTable" class="table-responsive">
            <thead>
                <tr>
                    <th>@L["Code"]</th>
                    <th>@L["Name"]</th>
                    <th>@L["ContactEmail"]</th>
                    <th>@L["ContactPhone"]</th>
                    <th>@L["CommissionPercent"]</th>
                    <th>@L["Status"]</th>
                    <th>@L["Actions"]</th>
                </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>

@await Html.PartialAsync("_StudentsModal", new StudentsModalModel(AgencyAppService)) 