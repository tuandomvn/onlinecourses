@page "/About-Us"
@using Microsoft.AspNetCore.Mvc.Localization
@using Acme.OnlineCourses.Localization
@inject IHtmlLocalizer<OnlineCoursesResource> L
@model Acme.OnlineCourses.Pages.AboutUs.AboutUsModel

@section styles {
    <abp-style src="/Pages/AboutUs/AboutUs.cshtml.css" />
}
@section scripts {
    <abp-script src="/Pages/AboutUs/AboutUs.cshtml.js" />
}

<!--Section 1 -->
<section class="about-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12 about-hero-content">
                <div class="about-label animate fade-in">TESOL Channel là gì ?</div>
                <h1 class="about-title animate fade-in delay-200">TESOL Channel</h1>
                <p class="about-description animate fade-in delay-400">
                    TESOL Channel – Nhà phân phối TESOL Online chính thức
                    và duy nhất của LTi tại Việt Nam.
                </p>
            </div>
            <div class="col-lg-6 col-md-12 about-hero-image">
                <img src="~/images/about1.PNG" alt="Students learning with TESOL Channel" class="img-fluid animate slide-right delay-300 float-animation" />
            </div>
        </div>
    </div>
</section>

<!--Section 2: TESOL Vision -->
<section class="about-vision">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12 mb-4 mb-lg-0">
                <div class="vision-content">
                    <h2 class="vision-title animate slide-left">Tầm nhìn</h2>
                    <p class="vision-description animate slide-left delay-200">
                        Trở thành đơn vị hàng đầu tại Việt Nam trong việc cung cấp các
                        chương trình đào tạo TESOL online chất lượng cao từ LTi Úc, giúp
                        nâng cao năng lực giảng dạy tiếng Anh và phát triển sự nghiệp
                        cho giáo viên trên toàn quốc.
                    </p>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="tesol-definition animate slide-right delay-100">
                    <img src="~/images/about2.PNG" alt="TESOL Definition" class="img-fluid definition-image" />
                </div>
            </div>
        </div>
    </div>
</section>

<!--Section 3: Mission -->
<section class="about-mission">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12 mb-4 mb-lg-0">
                <div class="mission-image-container animate slide-left">
                    <img src="~/images/about3.PNG" alt="TEACH blocks" class="img-fluid mission-image" />
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="mission-content">
                    <h2 class="mission-title animate fade-in">Sứ mệnh</h2>
                    <ul class="mission-list">
                        <li class="animate slide-right delay-200">
                            Mang đến các chương trình TESOL online đạt chuẩn quốc tế từ
                            LTi Úc, phù hợp với nhu cầu học tập và phát triển của giáo viên
                            tiếng Anh tại Việt Nam.
                        </li>
                        <li class="animate slide-right delay-300">
                            Hỗ trợ học viên xây dựng nền tảng kiến thức vững chắc, kỹ
                            năng giảng dạy hiện đại và tư duy sáng tạo trong môi trường
                            giáo dục toàn cầu.
                        </li>
                        <li class="animate slide-right delay-400">
                            Đảm bảo dịch vụ hỗ trợ chuyên nghiệp, tận tâm và đồng hành
                            cùng học viên trong suốt quá trình học tập và phát triển sự
                            nghiệp
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!--Section 4: Core Values -->
<section class="about-values">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <h2 class="values-title animate fade-in">Giá trị cốt lõi</h2>
                <ul class="values-list">
                    <li class="animate fade-in delay-100">
                        <strong>Chất lượng:</strong> Cam kết cung cấp các chương trình đào tạo đạt tiêu chuẩn cao nhất, đảm bảo giá trị thực tiễn và hiệu quả cho học viên
                    </li>
                    <li class="animate fade-in delay-200">
                        <strong>Đổi mới:</strong> Luôn cập nhật và áp dụng các phương pháp giảng dạy tiên tiến, phù hợp với xu hướng giáo dục toàn cầu
                    </li>
                    <li class="animate fade-in delay-300">
                        <strong>Tận tâm:</strong> Đặt lợi ích và sự phát triển của học viên lên hàng đầu, đồng hành cùng họ trên hành trình chinh phục mục tiêu nghề nghiệp.
                    </li>
                    <li class="animate fade-in delay-400">
                        <strong>Hợp tác:</strong> Xây dựng mối quan hệ bền vững với đối tác, học viên và cộng đồng giáo dục để cùng nhau phát triển.
                    </li>
                    <li class="animate fade-in delay-500">
                        <strong>Phát triển bền vững:</strong> Đóng góp vào sự phát triển lâu dài của ngành giáo dục tiếng Anh tại Việt Nam thông qua các chương trình đào tạo chất lượng cao.
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_Footer")