@page
@model Acme.OnlineCourses.Pages.EmploymentSupports.IndexModel
@{
    ViewData["Title"] = "Employment Supports";
}

@section styles {
    <abp-style src="/Pages/EmploymentSupports/index.cshtml.css" />
}
@section scripts {
    <abp-script src="/Pages/EmploymentSupports/index.cshtml.js" />
}

<div class="employment-support-page">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6 animate fade-in">
                <div class="subtitle">Công việc sau khi học?</div>

                <h1 class="main-heading">Hỗ trợ tìm việc sau khóa học</h1>

                <p class="mb-4">Tesol Channel cam kết sẽ hỗ trợ bạn ngay cả sau khi hoàn thành khóa học.</p>

                <p>Tesol Channel sẽ kết nối bạn với các cơ hội việc làm tại các công ty, trung tâm Anh ngữ và trường học trong nước và quốc tế. Chúng tôi có mạng lưới đối tác rộng khắp, sẵn sàng giới thiệu bạn đến các vị trí phù hợp.</p>
            </div>
            <div class="col-lg-6 animate fade-in">
                <img src="~/images/es.PNG" alt="Employment Support" class="img-fluid">
            </div>
        </div>
    </div>
</div>


<form method="post">
    <div class="form-group">
        <label asp-for="EmploymentSupport.FullName">Họ và tên</label>
        <input asp-for="EmploymentSupport.FullName" class="form-control" />
        <span asp-validation-for="EmploymentSupport.FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmploymentSupport.DateOfBirth">Ngày sinh</label>
        <input asp-for="EmploymentSupport.DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="EmploymentSupport.DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmploymentSupport.PhoneNumber">Số điện thoại</label>
        <input asp-for="EmploymentSupport.PhoneNumber" class="form-control" />
        <span asp-validation-for="EmploymentSupport.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmploymentSupport.Email">Email</label>
        <input asp-for="EmploymentSupport.Email" class="form-control" />
        <span asp-validation-for="EmploymentSupport.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmploymentSupport.Address">Địa chỉ</label>
        <input asp-for="EmploymentSupport.Address" class="form-control" />
        <span asp-validation-for="EmploymentSupport.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmploymentSupport.CourseCompletionDate">Ngày hoàn thành khóa học</label>
        <input asp-for="EmploymentSupport.CourseCompletionDate" type="date" class="form-control" />
        <span asp-validation-for="EmploymentSupport.CourseCompletionDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmploymentSupport.Message">Tin nhắn</label>
        <textarea asp-for="EmploymentSupport.Message" class="form-control"></textarea>
        <span asp-validation-for="EmploymentSupport.Message" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Gửi</button>
</form> 


@await Html.PartialAsync("_Footer")
