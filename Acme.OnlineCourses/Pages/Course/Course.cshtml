@page "/Courses"
@using Microsoft.AspNetCore.Mvc.Localization
@using Acme.OnlineCourses.Localization
@inject IHtmlLocalizer<OnlineCoursesResource> L
@model Acme.OnlineCourses.Pages.Course.CourseModel

@section styles {
    <abp-style src="/Pages/Course/Course.cshtml.css" />
}
@section scripts {
    <abp-script src="/Pages/Course/Course.cshtml.js" />
}

<!-- Section1-->
<section>
    <div class="course-hero container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-12">
                <div class="course-label animate fade-in">@L["Course.Hero.Label"]</div>
                <h1 class="course-title animate fade-in delay-200">
                    @Html.Raw(L["Course.Hero.Title"].Value)
                </h1>
                <p class="course-description animate fade-in delay-400">
                    @L["Course.Hero.Description"]
                </p>
            </div>
            <div class="col-lg-5 col-md-12">
                <div class="course-video-container animate slide-right delay-300" id="open-video-modal">
                    <img src="https://img.youtube.com/vi/LL35TBsClH4/maxresdefault.jpg" alt="@L["Course.Hero.VideoAlt"]" class="course-thumbnail float-animation" />
                    <div class="play-button">
                        <i class="fa fa-play"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Video Modal -->
    <div id="video-modal" class="video-modal">
        <div class="video-modal-content">
            <span class="video-modal-close" id="close-video-modal">&times;</span>
            <iframe id="video-iframe"
                    width="800"
                    height="450"
                    src=""
                    title="@L["Course.Hero.VideoTitle"]"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen>
            </iframe>
        </div>
    </div>
</section>


