@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Acme.OnlineCourses.Localization
@inject IHtmlLocalizer<OnlineCoursesResource> L
@model Acme.OnlineCourses.Pages.AboutModel

@section styles {
    <abp-style src="/Pages/About.cshtml.css" />
}
@section scripts {
    <abp-script src="/Pages/About.cshtml.js" />
}

<div class="row mb-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">@Model.AboutBlog?.Title</h3>
                <div class="text-muted mb-3">
                    @if (Model.AboutBlog?.PublishedDate != null)
                    {
                        <small>@Model.AboutBlog.PublishedDate.Value.ToString("dd/MM/yyyy")</small>
                    }
                </div>
                <div class="blog-content">
                    @Html.Raw(Model.AboutBlog?.Content)
                </div>
            </div>
        </div>
    </div>
</div> 