@page
@using Microsoft.Extensions.Localization
@using Acme.OnlineCourses.Localization
@model Acme.OnlineCourses.Pages.Account.LoginModel
@inject IStringLocalizer<OnlineCoursesResource> L
@{
    ViewData["Title"] = L["Login"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">@L["Login"]</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="Input.Email">@L["Email"]</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Input.Password">@L["Password"]</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="Input.RememberMe" class="custom-control-input" />
                                <label asp-for="Input.RememberMe" class="custom-control-label">@L["RememberMe"]</label>
                            </div>
                        </div>
                        
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary">@L["Login"]</button>
                        </div>
                        
                        <div class="form-group text-center mt-3">
                            <p>
                                <a asp-page="./Register">@L["CreateNewAccount"]</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 