@page
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Acme.OnlineCourses.Localization
@using Acme.OnlineCourses.Pages.Blogs
@model EditModalModel
@inject IStringLocalizer<OnlineCoursesResource> L
@{
    Layout = null;
}

<form asp-page="/Blogs/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Edit"].Value"></abp-modal-header>
        <abp-modal-body>
            <input asp-for="Blog.Id" />
            <abp-input asp-for="Blog.Title" />
            <abp-input asp-for="Blog.Slug" />
            <abp-input asp-for="Blog.Content" />
            <abp-input asp-for="Blog.Summary" />
            <abp-input asp-for="Blog.FeaturedImage" />
            <abp-input asp-for="Blog.Author" />
            <abp-input asp-for="Blog.Tags" />
            <abp-input asp-for="Blog.IsPublished" />
            <abp-input asp-for="Blog.PublishedDate" type="date" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form> 